{
  "type": "module",
  "name": "businessscope-ai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:smoke": "jest --testPathPattern=__tests__/smoke",
    "test:coverage": "jest --coverage",
    "migrate:dev": "tsx scripts/migrate.ts --env=development",
    "migrate:staging": "tsx scripts/migrate.ts --env=staging",
    "migrate:production": "tsx scripts/migrate.ts --env=production",
    "db:backup": "tsx scripts/backup.ts",
    "db:restore": "tsx scripts/restore.ts",
    "lighthouse": "lhci autorun",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "snyk test",
    "monitor:health": "tsx scripts/health-check.ts",
    "monitor:metrics": "tsx scripts/metrics.ts",
    "deploy:staging": "vercel --prod --env staging",
    "deploy:production": "vercel --prod --env production",
    "stylelint": "stylelint \"**/*.css\" --fix",
    "stylelint:check": "stylelint \"**/*.css\"",
    "build:clear": "node scripts/optimize-build.js clear",
    "build:optimize": "node scripts/optimize-build.js optimize",
    "build:analyze": "node scripts/optimize-build.js analyze",
    "build:full": "node scripts/optimize-build.js full"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@formatjs/icu-messageformat-parser": "^2.11.2",
    "@google/generative-ai": "^0.15.0",
    "@hookform/resolvers": "^3.3.0",
    "@radix-ui/react-alert-dialog": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.0.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@sentry/nextjs": "^9.40.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.38.4",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/node": "^20.19.9",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vercel/analytics": "^1.2.0",
    "@vercel/speed-insights": "^1.0.0",
    "abab": "^2.0.6",
    "autoprefixer": "^10.0.1",
    "axios": "^1.6.0",
    "boolean": "^3.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "csv-parse": "^6.1.0",
    "date-fns": "^3.0.0",
    "domexception": "^4.0.0",
    "lodash": "^4.17.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.400.0",
    "next": "15.4.2",
    "openai": "^4.0.0",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.48.0",
    "recharts": "^2.15.4",
    "resend": "^3.5.0",
    "rimraf": "^6.0.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.3.0",
    "twilio": "^5.0.0",
    "typescript": "^5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.0",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "eslint": "^8",
    "eslint-config-next": "15.4.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.0.0",
    "snyk": "^1.1200.0",
    "stylelint": "^16.22.0",
    "stylelint-config-standard": "^38.0.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{js,jsx,ts,tsx}"
    ]
  }
}
